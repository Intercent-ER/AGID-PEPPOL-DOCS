							<schematronProcessingEngine>schematron</schematronProcessingEngine>
							<failFast>false</failFast>
						</configuration>
					</execution>
				</executions>
			</plugin>
		
		
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xml-maven-plugin</artifactId>
				<version>1.0.2</version>
				<executions>
					<!-- Phase 1 -->
					<execution>
						<id>sch-to-xslt-phase1</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>transform</goal> 
						</goals>
						<configuration>
							<transformationSets>
								<transformationSet>
									<dir>${basedir}/3.0/sch/</dir>
									<includes>
										<include>**/*.sch</include>
									</includes>
									<stylesheet>${basedir}/utilities/iso_dsdl_include.xsl</stylesheet>
									<outputDir>${project.build.directory}/${project.build.finalName}/phase1</outputDir>
									<fileMappers>
										<fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
											<targetExtension>.sch</targetExtension>
										</fileMapper>
									</fileMappers>
								</transformationSet>
							</transformationSets>
						</configuration>
					</execution>
					<!-- Phase 2 -->
					<execution>
						<id>sch-to-xslt-phase2</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>transform</goal> 
						</goals>
						<configuration>
							<transformationSets>
								<transformationSet>
									<dir>${project.build.directory}/${project.build.finalName}/phase1</dir>
									<stylesheet>${basedir}/utilities/iso_abstract_expand.xsl</stylesheet>
									<outputDir>${project.build.directory}/${project.build.finalName}/phase2</outputDir>
									<fileMappers>
										<fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
											<targetExtension>.sch</targetExtension>
										</fileMapper>
									</fileMappers>
								</transformationSet>
							</transformationSets>
						</configuration>
					</execution>
					<!-- Phase 2 -->
					<execution>
						<id>sch-to-xslt-phase3</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>transform</goal> 
						</goals>
						<configuration>
							<transformationSets>
								<transformationSet>
									<dir>${project.build.directory}/${project.build.finalName}/phase2</dir>
									<stylesheet>${basedir}/utilities/iso_svrl_for_xslt2.xsl</stylesheet>
									<outputDir>${project.build.directory}/${project.build.finalName}/xsl</outputDir>
									<fileMappers>
										<fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
											<targetExtension>.xsl</targetExtension>
										</fileMapper>
									</fileMappers>
								</transformationSet>
							</transformationSets>
						</configuration>
					</execution>				
				</executions>
				<dependencies>
					<dependency>
						<groupId>net.sf.saxon</groupId>
						<artifactId>Saxon-B</artifactId>
						<version>9.0</version>
					</dependency>
				</dependencies>
			</plugin>

					
			<plugin>
				<groupId>com.helger.maven</groupId>
				<artifactId>ph-schematron-maven-plugin</artifactId>
				<version>7.1.3</version>
				<executions>
					<execution>
					<id>unit-test-invoice</id>
						<goals>
							<goal>validate</goal>
						</goals>
						<configuration>
							<schematronFile>3.0/sch/peppolbis-en16931-ubl-3.0-invoice/Schematron/ITA/AGID-EN16931-UBL - PEPPOL ITA.sch</schematronFile>
							<xmlDirectory>examples/invoice/OK</xmlDirectory>
							<xmlErrorDirectory>examples/invoice/KO</xmlErrorDirectory>
							<svrlDirectory>target/svrl/</svrlDirectory>
