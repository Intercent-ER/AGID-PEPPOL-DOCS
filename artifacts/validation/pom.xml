							<goal>validate</goal>
						</goals>
						<configuration>
							<schematronFile>3.0/sch/peppolbis-trdm001-3.0-order/Schematron/ITA/AGID-PEPPOL-T01.sch</schematronFile>
							<xmlDirectory>examples/other/Ordine Semplice/</xmlDirectory>
							<svrlDirectory>target/svrl/</svrlDirectory>
							<!--<xmlErrorDirectory>src/test/resources/</xmlErrorDirectory>-->
							<svrlErrorDirectory>target/svrl-error/</svrlErrorDirectory>
							<schematronProcessingEngine>schematron</schematronProcessingEngine>
							<failFast>false</failFast>
						</configuration>
					</execution>
					<execution>
					<id>unit-test-orderresponse</id>
						<goals>
							<goal>validate</goal>
						</goals>
						<configuration>
							<schematronFile>3.0/sch/peppolbis-trdm076-3.0-order-response/Schematron/ITA/AGID-PEPPOL-T76.sch</schematronFile>
							<xmlDirectory>examples/other/Risposta all'Ordine/</xmlDirectory>
							<svrlDirectory>target/svrl/</svrlDirectory>
							<!--<xmlErrorDirectory>src/test/resources/</xmlErrorDirectory>-->
							<svrlErrorDirectory>target/svrl-error/</svrlErrorDirectory>
							<schematronProcessingEngine>schematron</schematronProcessingEngine>
							<failFast>false</failFast>
						</configuration>
					</execution>
					<execution>
					<id>unit-test-orderagreement</id>
						<goals>
							<goal>validate</goal>
						</goals>
						<configuration>
							<schematronFile>3.0/sch/peppolbis-trdm110-3.0-order-agreement/Schematron/ITA/AGID-PEPPOL-T110.sch</schematronFile>
							<xmlDirectory>examples/other/Ordine Pre-Concordato/</xmlDirectory>
							<svrlDirectory>target/svrl/</svrlDirectory>
