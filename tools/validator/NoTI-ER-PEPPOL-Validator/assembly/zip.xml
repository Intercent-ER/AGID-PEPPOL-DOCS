<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://maven.apache.org/ASSEMBLY/2.0.0
      http://maven.apache.org/xsd/assembly-2.0.0.xsd"
>
    <id>zip</id>
    <formats>
        <format>zip</format>
    </formats>
    <!--includeBaseDirectory>false</includeBaseDirectory-->
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>src</directory>
            <includes>
                <include>*.bat</include>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>css</outputDirectory>
            <directory>src/css</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>js</outputDirectory>
            <directory>src/js</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>src/lib</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>xsd</outputDirectory>
            <directory>src/xsd</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>xsl</outputDirectory>
            <directory>src/xsl</directory>
        </fileSet>
        <fileSet> <!-- Create empty directory -->
            <outputDirectory>xsl/PEPPOL</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet> <!-- Create empty directory -->
            <outputDirectory>xml</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet> <!-- Create empty directory -->
            <outputDirectory>output</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <!-- package dependencies -->
